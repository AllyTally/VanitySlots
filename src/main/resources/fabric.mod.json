{
  "schemaVersion": 1,
  "id": "vanityslots",
  "version": "${version}",

  "name": "Vanity Slots",
  "description": "This mod adds four extra armor slots! The armor you place in these slots doesn't improve your stats, but they display over your normal armor.",
  "authors": [
    "AllyTally"
  ],
  "contact": {
    "homepage": "https://ally.moe/",
    "sources": "https://github.com/AllyTally/VanitySlots"
  },

  "license": "CC0-1.0",
  "icon": "assets/vanityslots/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "moe.ally.vanityslots.VanitySlots"
    ]
  },
  "mixins": [
    "vanityslots.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x",
    "trinkets": ">=2.4.0"
  },
  "suggests": {
    "another-mod": "*"
  }
}
